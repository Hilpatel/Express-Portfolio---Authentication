<section class="listSection">
    <h1 class="heading"> Add a Contact </h1>

    <div class="container">
        <form method="post" action="">
            <label style="font-size: 1.5rem;" for="fname">Name</label>
            <input type="text" id="contactName" name="contactName" placeholder="Your name..">

            <label style="font-size: 1.5rem;" for="lname">Number</label>
            <input type="text" id="contactNumber" name="contactNumber" placeholder="Your number">

            <label style="font-size: 1.5rem;" for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Your email...">

            <button style="font-size: 1.5rem;" class="editBtn" type="submit">ADD</button>

            <a style="font-size: 1.5rem;" href="/contactlist" class="editBtn">Cancel</a>

            
        </form>
</section>


